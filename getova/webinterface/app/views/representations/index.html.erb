<%- model_class = Representation -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:individual_id) %></th>
      <th><%= model_class.human_attribute_name(:format_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @representations.each do |representation| %>
      <tr>
        <td><%= link_to Individual.find_by(:id => representation.individual_id).name, representation_path(representation) %></td>
        <td><%= link_to IndividualFormat.find_by(:id => representation.format_id).name, representation_path(representation)%></td>
        <td><%= distance_of_time_in_words(representation.created_at, Time.now) %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_representation_path(representation), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      representation_path(representation),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
